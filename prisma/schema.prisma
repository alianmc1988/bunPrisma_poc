generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Bar {
  id        String   @id @default(cuid())
  name      String
  address   String
  staff     Staff[]
  profileInBar ProfileInBar[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

}

model User {
  id        String     @id @default(cuid())
  email     String     @unique
  password  String
  token     String     @default("")
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  profiles  Profile[]
}

model Profile {
  id        String   @id @default(cuid())
  firstName      String
  lastName       String
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  role      Role @default(CUSTOMER)
  staff     Staff[]
  profileInBar ProfileInBar[]
  barId     String @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


model ProfileInBar {
  id        String   @id @default(cuid())
  profile   Profile @relation(fields: [profileId], references: [id])
  profileId String @unique
  bar       Bar     @relation(fields: [barId], references: [id])
  barId     String @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


model Staff {
  id        String   @id @default(cuid())
  staffType StaffType
  profile   Profile @relation(fields: [profileId], references: [id])
  profileId String @unique
  bar       Bar     @relation(fields: [barId], references: [id])
  barId     String @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


enum  StaffType {
  CASHER
  MANAGER
}

enum Role {
  CUSTOMER
  STAFF
  SUPER_ADMIN 
}
